Import('rtconfig')
import os
from building import *

#Import('SDK_ROOT')
#Import('APP_ROOT')
#Import('IOTK_ROOT')

LIB_ROOT = os.path.normpath(os.getcwd() + '/../../')

src = Glob(LIB_ROOT + '/src/*.c')

path_inc = [LIB_ROOT + '/inc/']

cflags = ' -D__FH8620__ '

group = DefineGroup('iotk_pal', src, depend = ['RT_USING_SPI_DEMO'], LOCAL_CPPPATH = path_inc, CCFLAGS = cflags)

Return('group')
